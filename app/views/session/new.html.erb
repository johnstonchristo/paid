<h1>Login</h1>

<% if flash[:login_error] %>
  <p>
    <%= flash[:login_error] %>
  </p>
<% end %>

<%= form_tag "/login" do %>
  <p>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
  </p>
  <p>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
  </p>

  <%= submit_tag "Login" %>
<% end %>
